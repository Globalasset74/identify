{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "useUnknownInCatchVariables": false,
    "sourceMap": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types"],
    "target": "ES2020"
  },
  "exclude": ["**/__snapshots__/**", "**/test/**", "**/*.test.ts"]
}
